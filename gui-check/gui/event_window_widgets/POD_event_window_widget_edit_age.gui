pod_age_editor = {
	name = "POD_event_window_widget_edit_age"
}

types PODAgeWidgets {
	type pod_age_editor = vbox {
		spacing = 8
		
		block "datacontext_recipient" {
			datacontext = "[EventWindowWidget.GetScope.sC('recipient')]"
		}
		
		text_label_center = {
			block "header_text" {
				text = "podintroductions.6010.widget"
			}
			using = Font_Type_Flavor
			fontsize = 24
		}
		
		button_standard = {
			block "datacontext_set" {
				datacontext = "[GetScriptedGui('POD_set_age')]"
			}
			text = "podintroductions.6010.reset"
			onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('age',MakeScopeValue(EventWindowWidget.GetScope.GetValue('original_age'))).End)]"
		}
		
		hbox = {
			spacing = 8
			
			block "datacontext_edit" {
				datacontext = "[GetScriptedGui('POD_edit_age')]"
			}
			
			button_standard = {
				raw_text = "+1"
				onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)1')).End)]"
				size = { 60 33 }
			}
			
			button_standard = {
				raw_text = "+10"
				onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)10')).End)]"
				size = { 60 33 }
			}
			
			button_standard = {
				raw_text = "+100"
				onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)100')).End)]"
				size = { 60 33 }
			}
			
			block "extreme_positive_values" {
				button_standard = {
					raw_text = "+1000"
					onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)1000')).End)]"
					size = { 60 33 }
				}
			}
		}
		
		hbox = {
			spacing = 8
			
			block "datacontext_edit" {
				datacontext = "[GetScriptedGui('POD_edit_age')]"
			}
			
			button_standard = {
				raw_text = "-1"
				onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)-1')).End)]"
				size = { 60 33 }
			}
			
			button_standard = {
				raw_text = "-10"
				onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)-10')).End)]"
				size = { 60 33 }
			}
			
			button_standard = {
				raw_text = "-100"
				onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)-100')).End)]"
				size = { 60 33 }
			}
			
			block "extreme_negative_values" {
				button_standard = {
					raw_text = "-1000"
					onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)-1000')).End)]"
					size = { 60 33 }
				}
			}
		}
		
		block "spacer" {
			spacer = { size = { 0 64 } }
		}
	}
}