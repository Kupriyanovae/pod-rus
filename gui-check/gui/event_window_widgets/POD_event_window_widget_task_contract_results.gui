# Usage:
# Save the task_contract you want to preview as a variable called "task_contract_widget" on the player

scrollbox = {
	name = "POD_event_window_widget_task_contract_results"
	
	datacontext = "[GetPlayer.MakeScope.Var('task_contract_widget').TaskContract]"
	
	parentanchor = right|top
	position = { -102 86 }
	size = { 500 436 }
	
	background = {
		using = Background_Area_ExtraDark
		margin = { 5 5 }
	}
	
	background = {
		using = Background_Frame_Gold
		margin = { 5 5 }
	}
	
	#blockoverride "scrollbox_margins" {}
	blockoverride "scrollbox_background" {}
	blockoverride "scrollbox_background_fade" {}
	
	blockoverride "scrollbox_content"
	{
		text_single = {
			text = "task_contract_tab_success"
			default_format = "#T"
			margin_bottom = 12
		}
		
		# from gui\window_task_contract.gui
		text_multi = {
			max_width = 460
			min_width = 460
			autoresize = yes

			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding

			text = "[TaskContract.GetRewardEffectDescription( '(bool)yes' )]"
			format_override = { weak medium }
		}
		
		text_single = {
			text = "task_contract_tab_failure"
			default_format = "#T"
			margin_bottom = 12
		}
		
		# from gui\window_task_contract.gui
		text_multi = {
			max_width = 460
			min_width = 460
			autoresize = yes

			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding

			text = "[TaskContract.GetRewardEffectDescription( '(bool)no' )]"

			format_override = { weak medium }
		}
	}
}