
margin_widget = {
	name = "POD_event_window_widget_lamb"
	layoutstretchfactor_horizontal = 55
	parentanchor = bottom|hcenter
	margin = { -40 -20 }
	position = { -30 -15 }
	size = { 100% 100% }
	scissor = yes
	
	### RIGHT CHARACTER ###
	widget = {
		parentanchor = bottom|right
		position = { -40 0 }
		size = { 330 558 }
		
		allow_outside = no
		
		portrait_event = {
			datacontext = "[EventWindowWidget.GetScope.sC('hunter4')]"
			parentanchor = bottom|hcenter
			position = { -80 -1 }
			size = { 500 558 }

			blockoverride "portrait_button"
			{
				size = { 700 558 }
				portrait_texture = "[Character.GetAnimatedPortraitEvenIfDead( 'environment_event_feast', 'camera_event_center', 'marshal', PdxGetWidgetScreenSize( PdxGuiWidget.Self ) )]"
				shaderfile = "gfx/FX/POD_shaders/POD_portrait_godrays.shader"
				
				using = tooltip_below
				tooltip_offset = { 550 -580 }
			}

			blockoverride "highlight_visible"
			{
				visible = "[Character.IsHovered]"
			}

			blockoverride "grayscale" {}
		}
	}
}
