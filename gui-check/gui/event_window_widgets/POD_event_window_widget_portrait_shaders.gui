types PODShaderPlaygroundTypes
{
	type pod_portrait_shader_editor = hbox
	{
		layoutpolicy_horizontal = expanding
		spacing = 6
		text_label_left = {
			block "label" {
				raw_text = "" 
			}
		}
		expand = {}
		hbox = {
			block "datacontext_edit" {}
			pod_portrait_shader_double_subtract = {}
			pod_portrait_shader_subtract = {}
			text_label_center = {
				min_width = 48
				block "variable" {
					raw_text = ""
				}
			}
			pod_portrait_shader_add = {}
			pod_portrait_shader_double_add = {}
		}
		spacer = { size = { 16 0 } }
		pod_portrait_shader_toggle = {
			block "datacontext_toggle" {}
		}
	}
	type pod_portrait_shader_double_subtract = button_icon
	{
		size = { 24 24 }
		texture = "gfx/interface/icons/flat_icons/select_arrow_left_double.dds"
		onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)-0.2')).End)]"
	}
	type pod_portrait_shader_subtract = button_icon
	{
		size = { 32 32 }
		mirror = horizontal
		texture = "gfx/interface/icons/flat_icons/select_arrow.dds"
		onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)-0.02')).End)]"
	}
	type pod_portrait_shader_add = button_icon
	{
		size = { 32 32 }
		texture = "gfx/interface/icons/flat_icons/select_arrow.dds"
		onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)0.02')).End)]"
	}
	type pod_portrait_shader_double_add = button_icon
	{
		size = { 24 24 }
		texture = "gfx/interface/icons/flat_icons/select_arrow_double.dds"
		onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).AddScope('delta',MakeScopeValue('(CFixedPoint)0.2')).End)]"
	}
	type pod_portrait_shader_toggle = button_clear
	{
		tooltip = "POD_portrait_shader_toggle"
		size = { 32 32 }
		onclick = "[ScriptedGui.Execute(GuiScope.SetRoot(Character.MakeScope).End)]"
	}
