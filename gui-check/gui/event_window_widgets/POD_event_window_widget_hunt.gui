
vbox = {
	name = "POD_event_window_widget_hunt"
	layoutpolicy_horizontal = expanding
	
	vbox = {
		spacing = 12
		margin_bottom = 12
		layoutpolicy_horizontal = expanding
		
		hbox = {
			visible = "[And( GetPlayer.MakeScope.Var('hunt_in_capital_selection').IsSet, EventWindowWidget.GetScope.sC('use_widget').IsValid )]"

			layoutpolicy_horizontal = expanding
			
			tooltip = "hunt_in_capital_widget_tt"
			
			expand = {}
			
			text_single = {
				margin_bottom = 5
				text = "hunt_in_capital_widget_desc"
			}
			
			widget = {
				min_width = 6
			}
			
			button_checkbox = {
				size = { 24 24 }
				checked = "[GetPlayer.MakeScope.Var('continue_hunting').IsSet]"
				onclick = "[PlayerGuiExecute('POD_toggle_hunt_in_capital')]"
			}
			
			expand = {}
			
		}

		hbox = {
			visible = "[PlayerGuiIsShown('POD_toggle_cthonic_womb')]"
			
			layoutpolicy_horizontal = expanding

			tooltip = "cthonic_womb_widget_tt"
			
			expand = {}
			
			text_single = {
				margin_bottom = 5
				text = "cthonic_womb_widget_desc"
			}
			
			widget = {
				min_width = 6
			}
			
			button_checkbox = {
				size = { 24 24 }
				checked = "[GetPlayer.MakeScope.Var('cthonic_womb_enabled').IsSet]"
				onclick = "[PlayerGuiExecute('POD_toggle_cthonic_womb')]"
			}
			
			expand = {}
			
		}
	}
}