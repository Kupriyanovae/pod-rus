
scrollbox = {
	name = "POD_event_window_widget_chargen_faith_selection"
	
	position = { -94 72 }
	size = { 500 460 }
	parentanchor = right|top

	blockoverride "scrollbox_margins" {}
	blockoverride "scrollbox_background" {}
	blockoverride "scrollbox_background_fade" {}
	blockoverride "scrollbox_content"
	{
		vbox = {
			layoutpolicy_horizontal = expanding
			datamodel = "[GetPlayer.MakeScope.GetList('chargen_faiths')]"
	
			margin = { 16 16 }
	
			spacing = 12
	
			background = {
				using = Background_Area_ExtraDark
			}
			
			item = {
				hbox = {
					datacontext = "[Scope.Faith]"
					layoutpolicy_horizontal = expanding
					spacing = 12
					
					spacer = { size = { 0 0 } }
					
					button_checkbox = {
						size = { 40 40 }
						onclick = "[GetScriptedGui('POD_chargen_faith_select').Execute(GuiScope.SetRoot(GetPlayer.MakeScope).AddScope('selection',Scope.Faith.MakeScope).End)]"
						checked = "[ObjectsEqual( Scope.Faith, GetPlayer.MakeScope.Var('chargen_faith_selection').Faith )]"
						tooltip = "POD_chargen_checkbox_tt"
						using = tooltip_ws
					}
					
					spacer = { size = { 12 0 } }
					
					button_standard = {
						size = { 0 60 }
						layoutpolicy_horizontal = expanding
						
						onclick = "[OpenGameViewData( 'faith', Faith.GetID )]"
						
						down = "[ObjectsEqual( Scope.Faith, GetPlayer.MakeScope.Var('chargen_faith_selection').Faith )]"
						
						icon = {
							texture = "[GetIllustration('religion_interior').GetTexture(Faith.MakeScope)]"
							size = { 100% 100% }
							spriteType = Corneredtiled
							texture_density = 5

							tintcolor = { 0.4 0.35 0.3 0.5 }
						}
						
						using = tooltip_es
						tooltipwidget = {
							faith_tooltip = {}
						}
						
						hbox = {
							layoutpolicy_horizontal = expanding
							min_height = 60
							
							spacer = { size = { 12 0 } }
							
							icon = {
								name = "faith_icon"
								size = { 45 45 }
								texture = "[Faith.GetIcon]"
							}
							
							spacer = { size = { 12 0 } }
							
							text_single = {
								text = "POD_chargen_faith_desc"
								default_format = "#glow_color:{0,0,0,1}"
								margin_top = -4
							}
							
							expand = {}
						}
					}
					
					spacer = { size = { 12 0 } }
				}
			}
		}
	}
}