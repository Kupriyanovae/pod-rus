types PODCompatibilityTypes
{
	type pod_compatibility_warning = window {
		parentanchor = center
		layer = top

		#using = Window_Movable
		using = Window_Background
		using = Window_Decoration_Warfare
		
		vbox = {
			using = Window_Margins
			set_parent_size_to_minimum = yes
			
			header_pattern = {
				layoutpolicy_horizontal = expanding
				
			}
			
			text_multi = {
				autoresize = yes
				max_width = 500
				align = center
				block "text" {
					raw_text = "lorem ipsum etc etc"
				}
			}
			
			spacer = { size = { 540 30 } }
		}
	}
	
	type pod_warning_language = pod_compatibility_warning {
		visible = "[Not(EqualTo_string(Localize('pod_mod_compatibility_language_header'),''))]"
		blockoverride "button_close" { visible = no }
		blockoverride "text" { text = "pod_mod_compatibility_language" }
		blockoverride "header_text" { text = "pod_mod_compatibility_language_header" }
	}
	type pod_warning_character = pod_compatibility_warning {
		visible = "[Not(GetVariableSystem.Exists('pod_warning_character'))]"
		blockoverride "button_close" { onclick = "[GetVariableSystem.Toggle('pod_warning_character')]" }
		blockoverride "text" { text = "pod_mod_compatibility_character" }
		blockoverride "header_text" { text = "pod_mod_compatibility_header" }
	}
